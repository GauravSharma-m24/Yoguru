@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/adminmaster.cshtml";
}
<div class="row">
    <div class="col-md-3"></div>
         <div class="col-md-6">
             <form action="/AdminZone/ChangePassword" method="post">
             <input type="password" placeholder="Enter Old Password " name="OldPass" class="form-control"><br><br>
             <input type="password" placeholder="Enter New Password " name="NewPass" class="form-control"><br><br>
             <input type="password" placeholder="Confirm New Password " name="ConfirmPass" class="form-control"><br><br>
             <button type="submit" class="btn btn-primary">SUBMIT</button>
             </form>
         </div>
     <div class="col-md-3"></div>
</div>

